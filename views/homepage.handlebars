<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="post-box">
  <div class="post-header">
    <div class="col-md-5">
      <h2 class="post-title">
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
    </div>
    <div class="col-md-7 post-info post-info-right">
      Created by {{post.user.name}} on {{format_date post.date_created}}
    </div>
    <div style="clear: both;"></div>
  </div>
  <div class="post-content">
    {{post.content}}
  </div>
</div>
{{/each}}


